<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        >

        <TextView
            android:id="@+id/my_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:text="@string/cake"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/my_textview4"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@+id/my_textview4"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/my_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:text="Cookies!"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/my_textview3"
            app:layout_constraintStart_toEndOf="@+id/my_textview"
            app:layout_constraintTop_toTopOf="@+id/my_textview" />

        <TextView
            android:id="@+id/my_textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:text="Brownies"
            app:layout_constraintVertical_chainStyle="packed"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/my_textview5"
            app:layout_constraintStart_toStartOf="@+id/my_textview5"
            app:layout_constraintTop_toBottomOf="@+id/my_textview" />

        <TextView
            android:id="@+id/my_textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/myColor"
            android:text="Ice Cream!"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/my_textview2"
            app:layout_constraintTop_toTopOf="@+id/my_textview2" />

        <TextView
            android:id="@+id/my_textview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/myColor"
            android:text="Donuts"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_textview4"
            tools:layout_editor_absoluteX="37dp" />


    </LinearLayout>
</FrameLayout>

